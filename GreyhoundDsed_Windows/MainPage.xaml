<Page
    x:Class="GreyhoundDsed_Windows.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GreyhoundDsed_Windows"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" MinWidth="500" MinHeight="640" MaxWidth="700">

    <Grid x:Name="gridMain" Background="#FF0099CC">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Image x:Name="imgLogo" Source="Assets/turtle.png" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <StackPanel x:Name="midStack" Orientation="Vertical" Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Name="lblTtitle" TextWrapping="Wrap" Text="TURTLE RACE" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="48" FontWeight="Bold" Margin="0" Foreground="White"/>

        </StackPanel>
        <Button x:Name="btnStart" Content="START" FontSize="24" Background="#FFFF4444" Foreground="White" Click="btnStart_Click" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Height="60"/>

    </Grid>
</Page>
